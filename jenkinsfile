node {   
    stage('Clone repository') {
        git branch: 'main', credentialsId: 'GitHub-ssh', url: 'git@github.com:FGooden/python-flask.git'
    }
    
    stage('Build image') {
        sh 'docker build -t ridacap/flask-image:latest .'
    }
    
    stage('Push image') {
        withDockerRegistry([ credentialsId: 'docker-cred', url: 'unix:///var/run/docker.sock' ]) {
        dockerImage.push()
        }  
    }    
}
