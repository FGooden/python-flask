pipeline{
    
    agent any
    options {
        skipStagesAfterUnstable()
    }
environment {
    DOCKERHUB_CREDENTIALS=credentials('dockerhub-cred')
}

stages {

    stage('gitclone') {

        steps {
            git 'https://github.com/FGooden/python-flask.git'
        }
    }

    stage('Build') {

        steps {
            sh 'docker build -t ridacap/flask-image:latest .'
        }
    }

    stage('Login') {

        steps {
            sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
        }
    }

    stage('Push') {

        steps {
            sh 'docker push ridacap/flask-image:latest'
        }
    }
}

post {
    always {
        sh 'docker logout'
    }
}
