node {   
    stage('Clone repository') {
        git branch: 'main', credentialsId: 'github-cred', url: 'https://github.com/FGooden/python-flask.git'
    }
    
    stage('Build image') {
       dockerImage = docker.build("ridacap/flask-image:latest")
    }
    
 stage('Push image') {
        withDockerRegistry([ credentialsId: "dockerhub-cred", url: "" ]) {
        dockerImage.push()
        }
    }    
}
