node {   
    stage('Clone repository') {
        git branch: 'main', credentialsId: 'github-cred', url: 'https://github.com/FGooden/python-flask.git'
    }
    
    stage('Build image') {
        def customImage = docker.build("ridacap/flask-image:${env.BUILD_ID}")
        customImage.push()
    }
}
